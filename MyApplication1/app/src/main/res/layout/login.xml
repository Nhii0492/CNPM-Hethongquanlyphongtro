<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:fillViewport="true"
        android:id="@+id/rvbl99em9nqc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:paddingTop="58dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/logo"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="54dp"
                android:background="@drawable/logo"
                android:orientation="vertical"
                android:paddingHorizontal="26dp"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:radius="20dp">




                <TextView
                    android:id="@+id/namelogo"
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"

                    android:text="DNINNS"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="48dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="307dp"
                android:layout_height="548dp"
                android:background="@drawable/framesignup"
                android:orientation="vertical"
                android:paddingVertical="28dp"
                android:layout_marginHorizontal="110dp"
                >


                <TextView
                    android:id="@+id/dangnhap"
                    android:layout_width="247dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="79dp"
                    android:layout_marginBottom="23dp"
                    android:text="Đăng nhập"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />


                <LinearLayout
                    android:id="@+id/username"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/boxsignup"
                    android:orientation="vertical"
                    android:paddingHorizontal="18dp">

                    <ImageView
                        android:id="@+id/picus"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icons8_username_24" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/password"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/boxsignup"
                    android:orientation="vertical"
                    android:paddingHorizontal="18dp">

                    <ImageView
                        android:id="@+id/picpassword"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/icons8_password_30" />

                    <RelativeLayout
                        android:id="@+id/r7z9fmijaz0e_rl"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/r7z9fmijaz0e"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_launcher" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rhkoqrpb6pjl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="13dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/forgetpw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn quên mật khẩu? "
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/createacc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tạo tài khoản mới"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="76dp"
                    android:background="@drawable/send"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:id="@+id/r21aynpaikh6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gửi"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>