<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:fillViewport="true"
        android:id="@+id/rbjtkb4yo7s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:paddingTop="54dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/logo"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="151dp"
                android:layout_marginBottom="54dp"
                android:background="@drawable/logo"
                android:orientation="vertical"
                android:paddingHorizontal="22dp"
                android:paddingTop="2dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/namelogo"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"

                    android:text="DNINNS"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="48sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/framesignup"
                android:layout_width="307dp"
                android:layout_height="548dp"
                android:background="@drawable/framesignup"
                android:orientation="vertical"
                android:paddingVertical="28dp">

                <TextView
                    android:id="@+id/r3r1iy7wp0hn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="75dp"
                    android:layout_marginBottom="9dp"
                    android:text="Đăng ký"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />

                <LinearLayout
                    android:id="@+id/rwel17vt2wk"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/boxsignup"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp">

                    <RelativeLayout
                        android:id="@+id/username"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:id="@+id/picusername"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icons8_username_24" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/password"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/boxsignup"
                    android:orientation="vertical"
                    android:paddingHorizontal="18dp">

                    <ImageView
                        android:id="@+id/picpw"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icons8_password_30" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/phone"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/boxsignup"
                    android:orientation="vertical"
                    android:paddingHorizontal="18dp">

                    <ImageView
                        android:id="@+id/picphone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icons8_phone_50" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/date"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/boxsignup"
                    android:orientation="vertical"
                    android:paddingHorizontal="18dp">

                    <ImageView
                        android:id="@+id/picdate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icons8_date_50" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mail"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/boxsignup"
                    android:orientation="vertical"
                    android:paddingHorizontal="18dp">

                    <RelativeLayout
                        android:id="@+id/picmail"
                        android:layout_width="19dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/raqesaxalxc6"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_launcher" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icons8_mail_50" />
                </LinearLayout>

                <TextView
                    android:id="@+id/exits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="27dp"
                    android:layout_marginBottom="11dp"
                    android:text="Đã có tài khoản"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="76dp"
                    android:background="@drawable/send"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:id="@+id/r21aynpaikh6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gửi"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>